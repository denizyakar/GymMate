<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ChestActivity">

    <ImageView
        android:id="@+id/backgroundImageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="411dp"
        android:layout_height="598dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="1dp">

        <ImageView
            android:id="@+id/dumbbellBenchPress"
            android:layout_width="107dp"
            android:layout_height="81dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_column="0"
            app:layout_row="0"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/dumbbellInclineBenchPress"
            android:layout_width="107dp"
            android:layout_height="81dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/dumbbellFly"
            android:layout_width="107dp"
            android:layout_height="81dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/cableLowChestPress"
            android:layout_width="107dp"
            android:layout_height="81dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_column="0"
            app:layout_row="3" />

        <ImageView
            android:id="@+id/barbellBenchPress"
            android:layout_width="107dp"
            android:layout_height="81dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_column="0"
            app:layout_row="4" />

        <ImageView
            android:id="@+id/chestDip"
            android:layout_width="107dp"
            android:layout_height="81dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            app:layout_column="0"
            app:layout_row="5" />

        <TextView
            android:id="@+id/textView"
            style="@style/Widget.AppCompat.TextView"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/rounded_corner"
            android:text="Dumbbell Bench Press 3x12
                                        The dumbbell bench press primarily targets the pectoralis major muscle, which is the large, fan-shaped muscle covering the front of the chest."
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:background="@drawable/rounded_corner"
            android:text="Dumbbell Incline Bench Press 3x12
                            The dumbbell incline bench press specifically targets the upper portion of the pectoralis major, also known as the clavicular head of the chest."
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:background="@drawable/rounded_corner"
            android:text="Dumbbell Fly 3x12
                                                                The dumbbell fly primarily targets the pectoralis major muscle, with an emphasis on the middle and outer portions of the chest."
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:background="@drawable/rounded_corner"
            android:text="Cable Low Chest Press 3x12
                                        The cable low chest press primarily targets the lower portion of the pectoralis major, also known as the sternal head of the chest."
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="3" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:background="@drawable/rounded_corner"
            android:text="Barbell Bench Press 3x12
                                            The barbell bench press primarily targets the middle portion of the pectoralis major muscle."
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="4" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="14dp"
            android:textSize="12sp"
            android:background="@drawable/rounded_corner"
            android:text="Chest Dip 3x10
                                                                The chest dip primarily targets the lower portion of the pectoralis major, also known as the sternal head of the chest."
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="5" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
